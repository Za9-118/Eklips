{
    "project-ver":   "1.0",
    "eklips-ver":    "4.0A",

    "game_name":     "Eklips Test App",

    "keys": {
        "cursorup": {
            "keys": ["w","up"],
            "holdable": false
        },
        "moveup": {
            "keys": ["w","up"],
            "holdable": true
        },
        "cursordown": {
            "keys": ["s","down"],
            "holdable": false
        },
        "movedown": {
            "keys": ["s","down"],
            "holdable": true
        },
        "cursorleft": {
            "keys": ["a","left"],
            "holdable": false
        },
        "moveleft": {
            "keys": ["a","left"],
            "holdable": true
        },
        "cursorright": {
            "keys": ["d","right"],
            "holdable": false
        },
        "moveright": {
            "keys": ["d","right"],
            "holdable": true
        }
    },
                                                     
    "viewport_resolution": [1280, 720],

    "cvars": {
        "file_drops": {
            "type": "bool",
            "default": false,
            "description": "Enable file drops."
        },
        "cheats": {
            "type": "bool",
            "default": false,
            "description": "Cheater!"
        },
        "can_fill_screen?": {
            "type": "bool",
            "default": true,
            "description": "Allow the game to empty the screen."
        },
        "glbl_scripts": {
            "type": "list",
            "default": [],
            "description": "Paths of scripts that will be autoloaded into the engine singleton `engine`."
        },
        "directory": {
            "type": "string",
            "default": "eklips",
            "description": "Directory for the game files."
        },
        "loading-scene": {
            "type": "string",
            "default": "root://internal/loading.scn",
            "description": "Scene to be used for the loading animation."
        },
        "master-scene": {
            "type": "string",
            "default": "res://data/master.scn",
            "description": "Scene to be loaded at the start."
        },
        "con": {
            "type": "bool",
            "default": true,
            "description": "Enable the console."
        },
        "con_speed": {
            "type": "int",
            "default": 450,
            "description": "The speed of the console dropdown."
        },
        "con_rate": {
            "type": "int",
            "default": 5,
            "description": "Blink rate of the console host cursor in milliseconds."
        },
        "ui_labelpoolamount": {
            "type": "int",
            "default": 100,
            "description": "Amount of label objects in the label pool to be premade."
        },
        "ui_layers": {
            "type": "int",
            "default": 25,
            "description": "The layers the UI module has access to (negative and positive)"
        }
    },

    "cmd": {}
}