{
    "project-ver":   "1.0",
    "eklips-ver":    "4.0A",

    "game_name":     "Eklips Test App",

    "datagenerated": {                                
        "mediafiles": [
            "media/*.*"
        ],
        "datafiles": [
            "data/*.*"
        ]
    },

    "keys": {
        "cursorup": {
            "keys": ["w","up"],
            "holdable": false
        },
        "moveup": {
            "keys": ["w","up"],
            "holdable": true
        },
        "cursordown": {
            "keys": ["s","down"],
            "holdable": false
        },
        "movedown": {
            "keys": ["s","down"],
            "holdable": true
        },
        "cursorleft": {
            "keys": ["a","left"],
            "holdable": false
        },
        "moveleft": {
            "keys": ["a","left"],
            "holdable": true
        },
        "cursorright": {
            "keys": ["d","right"],
            "holdable": false
        },
        "moveright": {
            "keys": ["d","right"],
            "holdable": true
        },
        "eng_cheats": {
            "keys": ["`","~","v"],
            "holdable": false
        }
    },
                                                     
    "viewport_resolution": [1280, 720],

    "cvars": {
        "file_drops": {
            "type": "bool",
            "default": false,
            "description": "Enable file drops."
        },
        "cheats": {
            "type": "bool",
            "default": false,
            "description": "Cheater!"
        },
        "can_fill_screen?": {
            "type": "bool",
            "default": true,
            "description": "Allow the game to empty the screen."
        },
        "glbl_scripts": {
            "type": "list",
            "default": [
                "load_new_scene",
                "is_key_pressed",
                "suicide",
                "cvars",
                "console",
                "Data"
            ],
            "description": "Global scripts or parameters to be loaded at the start of the game."
        },
        "directory": {
            "type": "string",
            "default": "eklips",
            "description": "Directory for the game files."
        },
        "loading-scene": {
            "type": "string",
            "default": "root://internal//loading.scn",
            "description": "Scene to be used for loading."
        },
        "master-scene": {
            "type": "string",
            "default": "res://data/master.scn",
            "description": "Master scene to be loaded at the start of the game."
        },
        "con": {
            "type": "bool",
            "default": true,
            "description": "Enable the console host."
        },
        "con_speed": {
            "type": "int",
            "default": 450,
            "description": "Speed of the console host."
        },
        "con_rate": {
            "type": "int",
            "default": 5,
            "description": "Blink rate of the console host cursor in milliseconds."
        },
        "ui_labelpoolamount": {
            "type": "int",
            "default": 100,
            "description": "Amount of label objects in the label pool to be premade."
        },
        "ui_layers": {
            "type": "int",
            "default": 25,
            "description": "The layers the UI module has access to (negative and positive)"
        }
    },

    "cmd": {}
}